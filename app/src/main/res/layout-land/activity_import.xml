<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".PresActivity"
    android:orientation="vertical"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/brusher"
        android:gravity="center"
        android:text=" SMART\nWakeUp"
        android:textColor="@color/lightbrown"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="45dp"
        android:text="Importe ton calendrier ESIEE PARIS"
        android:textColor="@color/brown"
        android:textSize="20dp" />

    <Button
        android:id="@+id/boutton_import_google"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="Click ICI pour Importer"
        android:fontFamily="@font/brusher"
        android:textColor="@color/beige"
        android:textSize="10dp" />

    <Button
        android:id="@+id/boutton_import_url"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="Click ICI pour SET tes alarms"
        android:fontFamily="@font/brusher"
        android:textColor="@color/beige"
        android:textSize="10dp" />

    <Button
        android:id="@+id/boutton_timepicker"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="TimePicker"
        android:fontFamily="@font/brusher"
        android:textColor="@color/beige"
        android:textSize="10dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>