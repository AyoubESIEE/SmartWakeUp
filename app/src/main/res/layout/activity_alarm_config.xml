<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".PresActivity"
    android:orientation="vertical"
    android:padding="8dp">



    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/brusher"
        android:gravity="center"
        android:text=" SMART\nWakeUp"
        android:textColor="@color/lightbrown"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="100dp"
        android:text="Click sur selection pour Choisir combien de temps avant ton cours, tu veux configurer ton alarme puis appuie sur lancer pour la génération de tes cours et alarmes"
        android:textColor="@color/brown"
        android:textSize="20sp" />

    <Button
        android:id="@+id/timeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:width="300dp"
        android:height="100dp"
        android:fontFamily="@font/brusher"
        android:gravity="center"
        android:layout_gravity="center"
        android:onClick="popTimePicker"
        android:text="@string/selection"
        android:textSize="30sp"
        android:textColor="@color/beige"
        android:background="@color/brown"/>

    <Button
        android:id="@+id/boutton_import_google"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/roundup"
        android:fontFamily="@font/brusher"
        android:gravity="center"
        android:text="LANCER"
        android:textColor="@color/beige"
        android:textSize="30dp" />

</LinearLayout>