<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".PresActivity"
    android:orientation="vertical"
    android:padding="8dp">





    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/brusher"
        android:gravity="center"
        android:text=" SMART\nWakeUp"
        android:textColor="@color/lightbrown"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="110dp"
        android:src="@drawable/calendar_image" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="27dp"
        android:text="Importe ton calendrier"
        android:textColor="@color/brown" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="45dp"
        android:text="SmartWakeup va te permettre d'importer ton calendrier de
google calendar ou d'un site web. Ainsi, cette application te
permettra de mieux t'organiser."
        android:textColor="@color/brown"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="110dp"
        android:src="@drawable/alarmset_image" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:text="Configuration intelligente de ton alarme"
        android:textColor="@color/brown" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="64dp"
        android:text="SmartWakeup peut configurer automatiquement ton reveil
du matin en fonction de ton emplois du temps. Que ce soit
pour tes cours, ton activité pro ou tes loisirs. Tu n'as plus
qu'a faire confiance à SmartWakeup pour organiser tes
reveils."
        android:textColor="@color/brown"
        android:textSize="12dp" />

    <Button
        android:id="@+id/boutton_suivant"
        android:layout_width="140dp"
        android:gravity="center"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/brusher"
        android:background="@drawable/roundup"
        android:textColor="@color/beige"
        android:text="Suivant"
        android:textSize="25dp" />


</LinearLayout>