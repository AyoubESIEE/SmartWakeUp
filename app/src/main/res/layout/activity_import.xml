<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".PresActivity"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/brusher"
        android:gravity="center"
        android:text=" SMART\nWakeUp"
        android:textColor="@color/lightbrown"
        android:textSize="50dp" />

    <Button
        android:id="@+id/boutton_import_google"
        android:layout_width="380dp"
        android:gravity="center"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:background="@drawable/roundup"
        android:textColor="@color/beige"
        android:text="Importe ton calendrier depuis Google Calendar"
        android:textSize="15dp" />

    <Button
        android:id="@+id/boutton_import_url"
        android:layout_width="380dp"
        android:gravity="center"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:background="@drawable/roundup"
        android:textColor="@color/beige"
        android:text="Importe ton calendrier depuis une adresse URL"
        android:textSize="15dp" />


</LinearLayout>